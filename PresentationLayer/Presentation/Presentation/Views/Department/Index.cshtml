<table id="Demogrid"></table>
<div id="pager"></div> 
<script>
    $(function () {
        $("#Demogrid").jqGrid
          ({
              url: "http://localhost:63732/Department/GetCustomers",
              datatype: 'json',
              mtype: 'Get',
              //table header name  
              colNames: ['Id','Name', 'EmailId', 'PassWord'],
              //colModel takes the data from controller and binds to grid  
              colModel: [
              { name: "Id" },
              { name: "Master_Name" },
              { name: "Master_Email" },
              { name: "PassWord" }
              ],
              height: '100%',
              rowNum: 10,
              viewrecords: true,
              caption: 'JQgrid DEMO',
              emptyrecords: 'No records',
              pager: jQuery('#pager'),
              rowList: [10, 20, 30, 40],
              jsonReader:
              {
                  root: "rows",
                  page: "page",
                  total: "total",
                  records: "records",
                  repeatitems: false,
                  Id: "0"
              },
              autowidth: true,
          }).navGrid('#pager',
            {
                edit: true,
                add: true,
                del: true,
                search: true,
                refresh: true,
                closeAfterSearch: true
            });
    });
</script>

